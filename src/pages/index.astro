---
import Statistics from "../components/Statistics.astro";
import Avatar from "../components/Avatar.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Home";
---

<BaseLayout pageTitle={pageTitle}>
    <article>
        <section class="container">
            <div class="content--left">
                <h1>Oh! Hi there...</h1>
                <div class="text">
                    <p>
                        I'm Sam. I'm a software engineer, specialising in
                        frontend development. That means I make stuff on the web
                        with code. I like to animate that stuff and add in micro
                        interactions where I can.
                    </p>
                    <p>
                        I care a lot about how things look and feel, but even
                        more about how they work for everyone - fast,
                        accessible, and intuitive. Whether it's a marketing
                        site, a dashboard, or a custom component library, I aim
                        to build interfaces that are as enjoyable as they are
                        functional.
                    </p>
                </div>
                <div class="statistics__wrapper">
                    <Statistics />
                </div>
                <a
                    class="button"
                    style="margin-top: var(--space-80)"
                    onclick="alert('This button should really do something...'); return false;"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 314 97.515"
                        preserveAspectRatio="none"
                    >
                        <path
                            d="M157,0C295.984.5,314,21.714,314,48.5s-3.217,53-157,48.5S0,75.286,0,48.5,18.016-.5,157,0Z"
                            transform="translate(0 0.008)"
                            fill="rgba(1,132,10,0.19)"></path>
                    </svg>
                    Lets work together
                </a>
            </div>
            <div class="content--right">
                <Avatar />
            </div>
        </section>
    </article>
</BaseLayout>
<style>
    .container {
        display: grid;
        margin: 0 auto;
        width: var(--width-wide-inset);
        max-width: var(--width-max-inset);
        grid-template-areas: ". text . media ";
        grid-template-columns: 1fr 6fr 1fr 6fr;
        gap: var(--space-20);
    }
    .content--left {
        grid-area: text;
        padding: var(--space-60) 0;
    }
    .content--right {
        grid-area: media;
        position: relative;
        margin-top: var(--space-80);
    }
    @media (max-width: 1400px) {
        .container {
            grid-template-areas: "text text . media";
        }
    }
    @media (max-width: 1280px) {
        .container {
            grid-template-columns: 1fr 2fr 1fr;
            grid-template-areas: "text text text" ". media .";
        }
        .content--left {
            display: grid;
            grid-template-columns: auto auto;
            grid-template-areas: "heading stats" "text stats" "button .";
            row-gap: var(--space-40);
            column-gap: var(--space-80);
            h1 {
                margin-bottom: 0;
                grid-area: heading;
            }
            .text {
                margin: 0;
                grid-area: text;
            }
            .button {
                margin-top: 0;
                grid-area: button;
            }
        }
        .statistics__wrapper {
            margin-top: 0;
            order: 2;
            grid-area: stats;
            align-self: center;
        }
        .content--right {
            margin-top: 0;
        }
    }

    @media (max-width: 768px) {
        .content--left {
            grid-template-columns: auto;
            grid-template-areas: "heading" "text" "stats" "button";
        }
    }
    @media (max-width: 480px) {
        .container {
            grid-template-columns: 1fr;
        }
    }
</style>
